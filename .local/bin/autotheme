#!/bin/bash

# osx-arc
mkdir ~/.themes
git clone https://github.com/LinxGem33/OSX-Arc-White ~/.themes/OSX-Arc-White
git clone https://github.com/LinxGem33/OSX-Arc-Darker ~/.themes/OSX-Arc-Darker
git clone https://github.com/LinxGem33/OSX-Arc-Shadow ~/.themes/OSX-Arc-Dark

# la-capitaine
git clone https://github.com/keeferrourke/la-capitaine-icon-theme.git ~/.icons/la-capitaine

# capitaine-cursors
git clone https://github.com/keeferrourke/capitaine-cursors.git
cp -pr capitaine-cursors/bin/xcursor ~/.icons/capitaine-cursors
rm -rf capitaine-cursors
