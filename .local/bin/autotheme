#!/bin/bash

# osx-arc
mkdir ~/.themes
git clone https://github.com/LinxGem33/OSX-Arc-White ~/.local/share/plasma/desktoptheme/OSX-Arc-White
git clone https://github.com/LinxGem33/OSX-Arc-Darker ~/.local/share/plasma/desktoptheme/OSX-Arc-Darker
git clone https://github.com/LinxGem33/OSX-Arc-Shadow ~/.local/share/plasma/desktoptheme/OSX-Arc-Shadow

# la-capitaine
git clone https://github.com/keeferrourke/la-capitaine-icon-theme.git ~/.local/share/icons/la-capitaine

# capitaine-cursors
git clone https://github.com/keeferrourke/capitaine-cursors.git
cp -pr capitaine-cursors/bin/xcursor ~/.local/icons
rm -rf capitaine-cursors
