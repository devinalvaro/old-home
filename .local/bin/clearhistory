#!/bin/bash

rm -f ~/.lesshst; touch $_

# database
rm -f ~/.dbshell; touch $_ # mongodb
rm -f ~/.mysql_history; touch $_
rm -f ~/.psql_history; touch $_

# language
rm -f ~/.ghc/ghci_history; touch $_
rm -f ~/.node_repl_history; touch $_

# python
rm -f ~/.ipynb_checkpoints/*
rm -f ~/.python_history; touch $_

# shell
rm -f ~/.bash_history; touch $_
rm -f ~/.zsh_history; touch $_

# vim
rm -f ~/.vim/fzf/*
rm -f ~/.vim/undo/*
rm -f ~/.viminfo; touch $_
