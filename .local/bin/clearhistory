#!/bin/bash

# database
[ -s ~/.dbshell ] && rm ~/.dbshell && touch $_
[ -s ~/.mysql_history ] && rm ~/.mysql_history && touch $_
[ -s ~/.psql_history ] && rm ~/.psql_history && touch $_

# language
[ -s ~/.node_repl_history ] && rm ~/.node_repl_history && touch $_
[ -s ~/.scheme_history ] && rm ~/.scheme_history && touch $_

# less
[ -s ~/.lesshst ] && rm ~/.lesshst && touch $_

# python
[ -d ~/.ipynb_checkpoints ] && rm -f ~/.ipynb_checkpoints/*
[ -s ~/.python_history ] && rm ~/.python_history && touch $_

# shell
[ -s ~/.bash_history ] && rm ~/.bash_history && touch $_
[ -s ~/.zsh_history ] && rm ~/.zsh_history && touch $_

# vim
[ -d ~/.vim/fzf ] && rm -f ~/.vim/fzf/*
[ -d ~/.vim/undo ] && rm -f ~/.vim/undo/*
[ -s ~/.viminfo ] && rm ~/.viminfo && touch $_
