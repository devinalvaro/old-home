#!/bin/bash

# database
rm ~/.dbshell &> /dev/null && touch $_ &> /dev/null
rm ~/.mysql_history &> /dev/null && touch $_ &> /dev/null
rm ~/.psql_history &> /dev/null && touch $_ &> /dev/null

# language
rm ~/.node_repl_history &> /dev/null && touch $_ &> /dev/null

# less
rm ~/.lesshst &> /dev/null && touch $_ &> /dev/null

# python
rm ~/.ipynb_checkpoints/* &> /dev/null
rm ~/.python_history &> /dev/null && touch $_ &> /dev/null

# shell
rm ~/.bash_history &> /dev/null && touch $_ &> /dev/null
rm ~/.zsh_history &> /dev/null && touch $_ &> /dev/null

# vim
rm ~/.vim/fzf/* &> /dev/null
rm ~/.vim/undo/* &> /dev/null
rm ~/.viminfo &> /dev/null && touch $_ &> /dev/null
