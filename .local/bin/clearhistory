#!/usr/bin/env bash

function clearhistory() {
    [ -f $1 ] && [ -s $1 ] && rm $1 && touch $1
    [ -d $1 ] && rm -f $1/* && rm -f $1/.[^.]* && touch $1/.gitignore
}

# less
clearhistory ~/.lesshst

# neovim
clearhistory ~/.config/nvim/.netrwhist
clearhistory ~/.local/share/nvim/fzf
clearhistory ~/.local/share/nvim/shada/main.shada
clearhistory ~/.local/share/nvim/undo

# node
clearhistory ~/.node_repl_history

# python
clearhistory ~/.python_history

# R
clearhistory ~/.Rhistory

# ruby
clearhistory ~/.irb_history
clearhistory ~/.pry_history

# shell
clearhistory ~/.bash_history
clearhistory ~/.zsh_history

# sqlite
clearhistory ~/.sqlite_history

# tig
clearhistory ~/.tig_history
