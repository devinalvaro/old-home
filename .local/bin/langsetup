#!/usr/bin/env bash
set -v

# variables
install='yay -S --needed --noconfirm --answeredit none'

# --------------------------------

# clang
$install clang
$install bear cquery

# go
$install go
nvim +GoInstallBinaries +qall

# javascript
$install node yarn
yarn global add javascript-typescript-langserver

# python
$install python python-pip
pip install --user 'python-language-server[all]'

# --------------------------------

# devdocs
docker run -d --restart always -p 9292:9292 --name devdocs devdocs/devdocs
