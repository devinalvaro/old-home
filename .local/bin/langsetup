#!/usr/bin/env bash
set -v

# variables
install='yay -S --needed --noconfirm --answeredit none'

# --------------------------------

# clang
$install clang
$install bear cquery

# go
$install go
go get -u -v github.com/nsf/gocode github.com/sourcegraph/go-langserver golang.org/x/tools/...

# javascript
$install node yarn
yarn global add javascript-typescript-langserver

# python
$install python python-pip
pip install --user 'python-language-server[all]'
