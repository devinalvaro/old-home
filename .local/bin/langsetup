#!/bin/bash -v

# variables
install='trizen -S --needed --noconfirm --noedit'

# --------------------------------

# clang
# - completer: clang
# - formatter: clang-format (~/.clang-format)
# - linter: gcc
$install clang

# python
# - langserver: pyls
$install python python-pip
pip install --user pycodestyle python-language-server

# go
# - completer: gocode
# - formatter: goimports
# - linter: goimports
$install go
$install go-tools gocode-daemon

# javascript
# - langserver: javascript-typescript-langserver
$install node yarn
yarn global add javascript-typescript-langserver
