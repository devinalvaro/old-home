#!/usr/bin/env bash
set -v

# variables
install='yay -S --needed --noconfirm --answeredit none'

# --------------------------------

# clang
$install clang

# go
$install go
nvim +GoInstallBinaries +qall

# javascript
$install node yarn
yarn global add javascript-typescript-langserver

# python
$install python python-pip
$install python-language-server
$install --asdeps python-{mccabe,pycodestyle,pydocstyle,pyflakes,rope} yapf

# ruby
$install ruby rubygems
$install ruby-solargraph
