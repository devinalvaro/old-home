#!/bin/bash -v

# check if Sunday
if [ $(date +%u) -ne 7 ]; then
   echo "Today's not Sunday yet. Have a good day and be productive!"
   exit 1
fi

# system
sudo apt update -y && sudo apt upgrade -y

# conda
conda update -y --all

# pip
pip install --upgrade pip
pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U

pip3 install --upgrade neovim
pip3 install --upgrade flake8 jedi yapf

# yarn
yarn global upgrade

# vim
vim +PlugUpgrade +qa
vim +PlugUpdate +qa

# antigen
antigen update

# universal-ctags
git clone https://github.com/universal-ctags/ctags.git
cd ctags

./autogen.sh 
./configure
make
sudo make install

cd ..
rm -rf ctags
