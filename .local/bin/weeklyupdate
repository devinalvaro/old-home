#!/bin/bash -v

# variables
upgrade="sudo apt update-y && sudo apt upgrade -y"

# functions
source ~/.local/bin/functions/build

# system
$upgrade

# conda
conda update -y --all

# pip
pip install --upgrade pip
pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U

pip3 install --upgrade neovim
pip3 install --upgrade flake8 jedi yapf

# yarn
yarn global upgrade

# vim
vim +PlugUpgrade +qa
vim +PlugUpdate +qa

# antigen
antigen update

# universal-ctags
build https://github.com/universal-ctags/ctags ctags
