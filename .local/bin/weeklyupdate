#!/bin/bash -v

# check if Sunday
if [ $(date +%u) -ne 7 ]; then
   echo "Today's not Sunday yet. Have a good day and be productive!"
   exit 1
fi

# package managers
if type "apt" > /dev/null 2>&1; then
	manager="apt"
elif type "dnf" > /dev/null 2>&1; then
	manager="dnf"
fi

# system
if [ $manager == "apt" ]; then sudo apt -y update; sudo apt upgrade; fi
if [ $manager == "dnf" ]; then sudo dnf -y upgrade; fi

# zsh
upgrade_oh_my_zsh

# neovim
nvim -c 'PlugUpgrade' -c 'qa!'
nvim -c 'PlugUpdate' -c 'qa!'

# pip
pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install --user -U

# go
go get -u -v all

# universal-ctags
git clone https://github.com/universal-ctags/ctags.git
cd ctags

./autogen.sh 
./configure
make
sudo make install

cd ..
rm -rf ctags
