#!/usr/bin/env bash
set -v

# variables
install='yay -S --needed --noconfirm --answeredit none'

# --------------------------------

# docker
$install docker docker-compose
sudo systemctl enable --now docker.service
sudo gpasswd -a $USER docker

# --------------------------------

# devdocs
docker run -d --restart always -p 9292:9292 --name devdocs devdocs/devdocs
