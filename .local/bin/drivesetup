#!/bin/bash -v

# home
cd ~

# package manager
add="sudo add-apt-repository -y"
install="sudo apt install -y"
update="sudo apt update -y"

# install
$add ppa:twodopeshaggy/drive && $update
$install drive

# init
mkdir .drive
cd .drive

drive init
drive pull --starred

# make soft links
ln -s ~/.drive/Academic ~/Documents/Academic
ln -s ~/.drive/Miscs ~/Documents/Miscs
ln -s ~/.drive/PDFs ~/Documents/PDFs
ln -s ~/.drive/Logos ~/Pictures/Logos
ln -s ~/.drive/Wallpapers ~/Pictures/Wallpapers
