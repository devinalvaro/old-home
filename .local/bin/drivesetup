#!/bin/bash -v

# init
mkdir .drive
cd .drive

drive init
drive pull --starred

# make soft links
ln -s ~/.drive/Academic ~/Documents/Academic
ln -s ~/.drive/Miscs ~/Documents/Miscs
ln -s ~/.drive/PDFs ~/Documents/PDFs
ln -s ~/.drive/Logos ~/Pictures/Logos
ln -s ~/.drive/Wallpapers ~/Pictures/Wallpapers
