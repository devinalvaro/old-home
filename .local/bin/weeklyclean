#!/bin/bash -v

# variables
clean="sudo apt-get clean -y && sudo apt-get autoclean -y"
purge="sudo apt --purge autoremove -y"

# remove orphan packages
$purge

# clean package archives
$clean

# remove terminal desktop files
sudo rm -f /usr/share/application/ranger.desktop
sudo rm -f /usr/share/applications/vim.desktop

# clean vim plugins
vim +PlugClean +qa
