#!/bin/bash -v

# check if Sunday
if [ $(date +%u) -ne 7 ]; then
   echo "Today's not Sunday yet. Have a good day and be productive!"
   exit 1
fi

# package managers
if type "apt" > /dev/null 2>&1; then
	manager="apt"
elif type "dnf" > /dev/null 2>&1; then
	manager="dnf"
fi

# remove orphan packages
if [ $manager == "apt" ]; then sudo apt autoremove -y; fi
if [ $manager == "dnf" ]; then sudo dnf autoremove -y; fi

# clean package archives
if [ $manager == "apt" ]; then sudo apt-get clean -y; sudo apt-get autoclean -y; fi
if [ $manager == "dnf" ]; then sudo dnf clean -y all; fi

# remove unused config files
if [ $manager == "apt" ]; then sudo dpkg --purge $(COLUMNS=200 dpkg -l | grep "^rc" | tr -s ' ' | cut -d ' ' -f 2); fi

# clean vim plugins
nvim -c 'PlugClean' -c 'qa!'
