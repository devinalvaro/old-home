#!/bin/bash -v

# variables
install="pacaur -S --needed --noconfirm --noedit"

# --------------------------------

# clang
$install gcc-multilib # linter
$install clang # completor (~/.clang_complete)
$install clang-format # formatter (~/.clang-format)

# jdk
$install jdk8-openjdk

# pip
$install python-pip

$install python-neovim

pip install --user flake8 # linter (~/.config/flake8)
pip install --user jedi # completor
pip install --user yapf # formatter (~/.style.yapf)

# nodejs
$install nodejs

# yarn
$install yarn

yarn global add eslint # linter
yarn global add csscomb js-beautify prettier-eslint-cli # formatter
yarn global add tern # completor

# --------------------------------

# bfs
$install bfs

# ctags
$install universal-ctags-git

# drive
$install drive

# ripgrep
$install ripgrep

# tmux
$install tmux

# vim
$install vim

curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
      https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
vim +PlugInstall +qa

mkdir ~/.vim/undo

# xsel
$install xsel

# zsh
$install zsh

mkdir ~/.antigen
curl -L git.io/antigen > ~/.antigen/antigen.zsh

chsh -s $(which zsh)
