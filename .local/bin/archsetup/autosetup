#!/usr/bin/env bash
set -v

# variables
install='yay -S --needed --noconfirm --answeredit none'

# yay
git clone https://aur.archlinux.org/yay.git
cd yay && makepkg -si --needed --noconfirm && cd .. && rm -rf yay

# --------------------------------

# command line interfaces
$install curl xclip

# command line utilities
$install fd fzf ripgrep universal-ctags-git

# fonts
$install ttf-hack ttf-symbola

# --------------------------------

# tmux
$install tmux

# vim
$install neovim python-neovim

curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
nvim +PlugInstall +qa

# zsh
$install zsh

mkdir -p ~/.antigen
curl -L git.io/antigen > ~/.antigen/antigen.zsh

chsh -s $(which zsh)
