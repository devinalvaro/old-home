#!/usr/bin/env bash
set -v

# variables
autoremove='eval sudo apt-get -y autoremove && sudo apt-get -y autoclean'
upgrade='eval sudo apt-get -y update && sudo apt-get -y upgrade'

# --------------------------------

# system
$upgrade

# neovim
nvim +PlugUpgrade +qall && nvim +PlugUpdate +qall

# shell
if [ "$SHELL" == "$(which bash)" ]; then
    bash -i -c 'bash-it update'
elif [ "$SHELL" == "$(which zsh)" ]; then
    zsh -i -c 'antigen update'
fi

# --------------------------------

# remove orphan packages
$autoremove

# clean neovim plugins
nvim +PlugClean +qall
