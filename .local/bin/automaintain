#!/bin/bash -v

# variables
autoclean='trizen -Sc --noconfirm'
autoremove='trizen -Rns --noconfirm '"$(trizen -Qdtq)"
upgrade='trizen -Syu --needed --noconfirm --noedit'

# --------------------------------

# pacman
$upgrade

# vim
nvim +PlugUpgrade +qa
nvim +PlugUpdate +qa

# zsh
zsh -i -c 'antigen update'

# --------------------------------

# remove orphan packages
$autoremove

# clean package archives
$autoclean

# clean vim plugins
nvim +PlugClean +qa
