#!/bin/bash -v

# variables
autoclean='yay -Sc --noconfirm'
autoremove='yay -Rns --noconfirm '"$(yay -Qdtq)"
upgrade='yay -Syu --needed --noconfirm --answeredit none'

# --------------------------------

# pacman
$upgrade

# vim
nvim +PlugUpgrade +qa
nvim +PlugUpdate +qa

# zsh
zsh -i -c 'antigen update'

# --------------------------------

# remove orphan packages
$autoremove

# clean package archives
$autoclean

# clean vim plugins
nvim +PlugClean +qa
