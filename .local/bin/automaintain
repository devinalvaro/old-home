#!/bin/bash -v

# variables
autoclean='trizen -Sc --noconfirm'
autoremove='trizen -Rns --noconfirm '"$(trizen -Qdtq)"
upgrade='trizen -Syu --needed --noconfirm --noedit'

# --------------------------------

# pacman
$upgrade

# pip
pip freeze --user | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install --upgrade --user

# yarn
yarn global upgrade

# vim
nvim +PlugUpgrade +qa
nvim +PlugUpdate +qa

# zsh
zsh -i -c 'antigen update'

# --------------------------------

# remove orphan packages
$autoremove

# clean package archives
$autoclean

# clean vim plugins
nvim +PlugClean +qa
