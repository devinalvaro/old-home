#!/bin/bash -v

# variables
install='trizen -S --needed --noconfirm --noedit'

# plasma
$install plasma-desktop plasma-nm plasma-pa plasma5-applets-redshift-control powerdevil

# gtk
$install breeze-gtk kde-gtk-config

# sddm
$install sddm

sudo systemctl enable sddm.service

sed -i s/Current=$/Current=breeze/ sddm.conf
sed -i s/CursorTheme=$/CursorTheme=breeze/ sddm.conf
