#!/usr/bin/env bash
set -v

# variables
install='yay -S --needed --noconfirm --answeredit none'

# --------------------------------

# plasma
$install plasma-meta plasma5-applets-redshift-control
$install --asdeps kde-gtk-config

# kde applications
$install ark dolphin kdeconnect okular spectacle

# libraries
$install libdbusmenu-glib ntfs-3g

# NetworkManager
sudo systemctl enable NetworkManager.service

# sddm
sudo systemctl enable sddm.service

sudo mkdir -p /etc/sddm.conf.d
sudo cp /usr/lib/sddm/sddm.conf.d/sddm.conf /etc/sddm.conf.d/sddm.conf

sudo sed -i s/Current=$/Current=breeze/ /etc/sddm.conf.d/sddm.conf
sudo sed -i s/CursorTheme=$/CursorTheme=breeze/ /etc/sddm.conf.d/sddm.conf
sudo sed -i s/EnableHiDPI=\.\*/EnableHiDPI=true/ /etc/sddm.conf.d/sddm.conf
sudo sed -i s/ServerArguments=\.\*/ServerArguments=-nolisten\ tcp\ -dpi\ 144/ /etc/sddm.conf.d/sddm.conf
