#!/bin/bash -v

# variables
install='trizen -S --needed --noconfirm --noedit'

# trizen
git clone https://aur.archlinux.org/trizen.git
cd trizen && makepkg -si --needed --noconfirm && cd .. && rm -rf trizen

# --------------------------------

# monospace fonts
$install ttf-hack ttf-symbola

# pattern matchers
$install fd fzf ripgrep universal-ctags-git

# commandline interfaces
$install httpie xclip

# --------------------------------

# tmux
$install tmux

# vim
$install neovim python-neovim

curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
nvim +PlugInstall +qa

# zsh
$install zsh

mkdir -p ~/.antigen
curl -L git.io/antigen > ~/.antigen/antigen.zsh

chsh -s $(which zsh)
