#!/bin/bash

# git
sudo pacman -S --noconfirm --needed git

# home
cd ~
git init
git remote add origin https://github.com/devinalvaro/home
git fetch
git checkout -t origin/master

# ripgrep
sudo pacman -S --noconfirm --needed ripgrep

# tmux
sudo pacman -S --noconfirm --needed tmux

# xsel
sudo pacman -S --noconfirm --needed xsel

# ranger
sudo pacman -S --noconfirm --needed ranger

# mpv
sudo pacman -S --noconfirm --needed mpv

# clang
sudo pacman -S --noconfirm --needed clang
sudo pacman -S --noconfirm --needed ctags

# pip
sudo pacman -S --noconfirm --needed python-pip
sudo pacman -S --noconfirm --needed python2-pip

# python
pip install --user pylint
pip install --user jedi

# neovim
sudo pacman -S --noconfirm --needed neovim
pip install --user neovim
pip2 install --user neovim

nvim -c 'PlugInstall' -c 'qa!'

# fzf
.fzf/install --all

# terminfo
infocmp $TERM | sed 's/kbs=^[hH]/kbs=\\177/' > $TERM.ti
tic $TERM.ti
rm $TERM.ti

# go
sudo pacman -S --noconfirm --needed go
rm -rf ~/go

# drive
go get -u github.com/odeke-em/drive/cmd/drive

# wget
sudo pacman -S --noconfirm --needed wget

# zsh
sudo pacman -S --noconfirm --needed zsh

git clone git://github.com/robbyrussell/oh-my-zsh.git ~/.oh-my-zsh
git clone git://github.com/zsh-users/zsh-autosuggestions ~/.oh-my-zsh/plugins/zsh-autosuggestions

wget -o - https://raw.githubusercontent.com/denysdovhan/spaceship-zsh-theme/master/install.sh ~
chmod +x ~/install.sh
~/install.sh
rm ~/install.sh*

chsh -s $(which zsh)

# vimfx
# {
#   "mode.normal.esc": "<force><escape> <force><c-[>",
#   "mode.caret.exit": "<escape> <c-[>",
#   "mode.hints.exit": "<escape> <c-[>",
#   "mode.hints.activate_highlighted": "<enter> <c-enter> <a-enter>",
#   "mode.ignore.exit": "i <escape> <c-[>",
#   "mode.ignore.unquote": "I",
#   "mode.find.exit": "<escape> <enter> <c-[>",
#   "mode.marks.exit": "<escape> <c-[>"
# }
