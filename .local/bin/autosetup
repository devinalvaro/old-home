#!/usr/bin/env bash
set -v

# variables
install='yay -S --needed --noconfirm --answeredit none'

# yay
git clone https://aur.archlinux.org/yay.git
cd yay && makepkg -si --needed --noconfirm && cd .. && rm -rf yay

# --------------------------------

# utilities
$install curl xclip

# fonts
$install ttf-fira-code noto-fonts-emoji

# --------------------------------

# tmux
$install tmux

# vim
$install neovim
$install --asdeps python-neovim

curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
nvim +PlugInstall +qall

# zsh
$install zsh

curl -fLo ~/.antigen/antigen.zsh --create-dirs git.io/antigen
chsh -s $(which zsh)
