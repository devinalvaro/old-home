#!/bin/bash -v

# variables
install='trizen -S --needed --noconfirm --noedit'

# trizen
git clone https://aur.archlinux.org/trizen.git
cd trizen && makepkg -si --needed --noconfirm && cd .. && rm -rf trizen

# --------------------------------

# clang
# - formatter: clang-format (~/.clang-format)
# - linter: gcc
$install clang

# go
# - completer: gocode
# - formatter: gofmt, goimports
# - linter: gofmt, goimports
$install go
$install gocode-git
$install goimports-git

# html
# - formatter: html-beautify (~/.jsbeautifyrc)
# js
# - completor: typescript-language-server
# - formatter: prettiereslint
# - linter: eslint (~/.eslintrc)
# css
# - formatter: prettier
$install nodejs
$install yarn

yarn global add typescript{,-language-server}
yarn global add js-beautify prettier{,-eslint-cli}
yarn global add eslint{,-config-airbnb,-plugin{-import,-jsx-a11y,-react}}

# php
# - completer: php-language-server
# - formatter: php-cs-fixer
# - linter: php -l
$install php
$install composer

composer global require friendsofphp/php-cs-fixer

# python
# - completer: python-language-server
# - formatter: yapf (~/.style.yapf)
# - linter: flake8 (~/.config/flake8)
$install python
$install python-pip

pip install --user python-language-server
pip install --user yapf
pip install --user flake8

# scheme
$install mit-scheme
$install rlwrap

# --------------------------------

# ctags
$install universal-ctags-git

# fd
$install fd-rs

# font
$install ttf-hack
$install ttf-symbola

# ripgrep
$install ripgrep

# rofi
$install rofi

# tmux
$install tmux

# vim
$install gvim

curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
      https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
vim +PlugInstall +qa

mkdir -p ~/.vim/{fzf,undo}

# zsh
$install zsh

mkdir -p ~/.antigen
curl -L git.io/antigen > ~/.antigen/antigen.zsh

chsh -s $(which zsh)
