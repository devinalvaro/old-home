#!/bin/bash -v

# variables
install='trizen -S --needed --noconfirm --noedit'

# trizen
git clone https://aur.archlinux.org/trizen.git
cd trizen && makepkg -si --needed --noconfirm && cd .. && rm -rf trizen

# --------------------------------

# clang
# - completer: clang
# - formatter: clang-format (~/.clang-format)
# - linter: gcc
$install clang

# go
# - completer: gocode
# - formatter: gofmt, goimports
# - linter: gofmt, goimports
$install go

$install gocode-bin
$install goimports-git

# html
# - formatter: html-beautify (~/.jsbeautifyrc)
# javascript/typescript
# - completer: tern
# - formatter: prettiereslint
# - linter: eslint (~/.eslintrc)
# css
# - formatter: prettier
$install nodejs yarn

yarn global add js-beautify prettier{,-eslint-cli}
yarn global add eslint{,-config-airbnb,-plugin{-import,-jsx-a11y,-react}}

# python
# - completer: jedi
# - formatter: yapf (~/.style.yapf)
# - linter: flake8 (~/.config/flake8)
$install python python-pip

$install python-jedi
$install yapf
$install flake8

# --------------------------------

# monospace fonts
$install ttf-hack ttf-symbola

# pattern matchers
$install fd fzf ripgrep universal-ctags-git

# commandline interfaces
$install httpie ranger tig xclip

# --------------------------------

# tmux
$install tmux

# vim
$install gvim

curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
      https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
vim +PlugInstall +qa

mkdir -p ~/.vim/{fzf,tags,undo}

# zsh
$install zsh

mkdir -p ~/.antigen
curl -L git.io/antigen > ~/.antigen/antigen.zsh

chsh -s $(which zsh)
