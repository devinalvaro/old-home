#!/bin/bash -v

# variables
install='trizen -S --needed --noconfirm --noedit'

# trizen
git clone https://aur.archlinux.org/trizen.git
cd trizen && makepkg -si --needed --noconfirm && cd .. && rm -rf trizen

# --------------------------------

# wireless
$install wireless_tools

# xorg
$install xautolock
$install xorg-server
$install xorg-xbacklight
$install xorg-xinit

# --------------------------------

# compton
$install compton

# feh
$install feh

# i3
$install i3-gaps

# i3lock
$install i3lock-color-git
$install i3lock-fancy-git

# pulseaudio
$install pulseaudio
$install pulseaudio-alsa

# polybar
$install polybar

# rofi
$install rofi

# --------------------------------
# clang
$install clang # completer: ~/.clang_complete | formatter: ~/.clang-format
$install gcc-multilib # linter

# go
$install go

$install gocode-git # completer
$install goimports-git # formatter | linter

# java
$install jdk8-openjdk

# nodejs
$install nodejs
$install yarn

yarn global add tern # completer: ~/.tern-config
yarn global add js-beautify prettier{,-eslint-cli} # formatter: ~/.jsbeautifyrc
yarn global add eslint{,-config-airbnb,-plugin{-import,-jsx-a11y,-react}} # linter: ~/.eslintrc

# python
$install python
$install python-pip

pip install --user jedi # completer
pip install --user yapf # formatter: ~/.style.yapf
pip install --user flake8 # linter: ~/.config/flake8

# scheme
$install mit-scheme
$install rlwrap

# --------------------------------

# ctags
$install universal-ctags-git

# fd
$install fd-rs

# font
$install ttf-hack
$install ttf-font-awesome
$install ttf-symbola

# ripgrep
$install ripgrep

# tmux
$install tmux

# vim
$install gvim
$install python-neovim

curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
      https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
vim +PlugInstall +qa

mkdir -p ~/.vim/{fzf,undo}

# zsh
$install zsh

mkdir -p ~/.antigen
curl -L git.io/antigen > ~/.antigen/antigen.zsh

chsh -s $(which zsh)
