[user]
	email = devin.alvaro@gmail.com
	name = Devin Alvaro

[core]
	excludesfile = ~/.config/git/gitignore
	pager = less --tabs=1,5

[push]
	default = simple

[credential]
	helper = cache

[alias]
	a = add
	aa = add --all
	ap = add --patch

	ch = cherry
	cp = cherry-pick

	cm = commit
	ca = commit --amend

	df = diff
	dc = diff --cached

	st = status
	ss = status --short
	sa = status --short -uall

	br = branch
	cl = clone
	cn = clean
	co = checkout
	fe = fetch
	lg = log
	mr = merge
	mv = mv
	p = push
	pl = pull
	rb = rebase
	re = remote
	rf = reflog
	rm = rm
	rs = reset
	rv = revert
	sh = stash
