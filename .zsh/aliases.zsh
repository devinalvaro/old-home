# editor aliases
alias v="$EDITOR"
alias vi="$EDITOR"
alias vim="$EDITOR"
alias nvim="$EDITOR"

# modifier aliases
alias http='http --style=bw'
alias less='less --tabs=4'
alias ls='ls --color=auto --group-directories-first'

# shortener aliases
alias c='docker-compose'
alias d='docker'
alias g='git'
alias py='python'
alias rb='ruby'
alias xo='xdg-open'

# yanking alises
alias paste='xclip -out -selection clipboard'
alias yank='xclip -in -selection clipboard'
